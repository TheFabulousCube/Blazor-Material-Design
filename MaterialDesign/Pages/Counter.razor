@page "/counter"
@using MaterialDesign.Data

<h1>Blazor Counter</h1>
<img src="./img/BrandBlazor_nohalo_1000x.png" height="100px"/>
<p>Current count: @currentCount</p>
<p>Global count: @GlobalData.GlobalCount</p>

<MatButton Outlined="true" class="btn btn-primary" @onclick="IncrementCount">Click me</MatButton>
<MatButton Outlined="true" class="btn btn-primary" @onclick="IncrementGlobalCount">Global</MatButton>

@code {
    int currentCount = 0;

    void IncrementGlobalCount()
    {
        GlobalData.GlobalCount++;
    }

    void IncrementCount()
    {
        currentCount++;
    }
}
